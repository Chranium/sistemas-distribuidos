{
	"version": "2.0.0",
	"tasks": [
      {
         "type": "cppbuild",
         "label": "C/C++: gcc.exe compilar archivo activo",
         "command": "C:\\MinGW\\bin\\gcc.exe",
         "args": [
            //gcc jobshop.c simlib.c -o jobshop -lm -fopenmp
            "-fdiagnostics-color=always",
            "-g3",
            "${file}",
            "simlib.c",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "-lm",
            "-fopenmp"
         ],
         "options": {
            "cwd": "${fileDirname}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "compilador: C:\\MinGW\\bin\\gcc.exe"
      },
      {
         "type": "shell",
         "label": "Run this C program",
         "command": "C:\\MinGW\\bin\\gcc.exe -g3 \"${file}\" simlib.c -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -lm -fopenmp && \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
         "options": {
            "cwd": "${fileDirname}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "compilador: C:\\MinGW\\bin\\gcc.exe"
      }
   ]
}